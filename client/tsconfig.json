{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "..",
    "jsx": "react-native",
    "lib": ["DOM", "ESNext"],
    "module": "preserve",
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "customConditions": ["react-native"],
    "noEmit": true,
    "target": "ESNext",
    "types": ["react-native", "@types/react"]
  },
  "include": [
    "../app/**/*",
    "./**/*",
    "../shared/**/*",
    "../index.ts"
  ],
  "exclude": [
    "node_modules",
    "../server/**/*",
    "../infrastructure/**/*",
    "../scripts/**/*"
  ]
}
